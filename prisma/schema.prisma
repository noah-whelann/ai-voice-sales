generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          Int      @id @default(autoincrement())
  name        String?
  email       String?  @unique
  phone       String?  @unique
  preferences Json?
  when_to_buy String?
  trade_in    String?
  notes       String?
  updated_at  DateTime @updatedAt
  calls       Call[]
}

model Call {
  id             Int       @id @default(autoincrement())
  customer_email String?
  customer_phone String?
  transcript     Json
  created_at     DateTime  @default(now())
  customer       Customer? @relation(fields: [customer_email], references: [email])
}
